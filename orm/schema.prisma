datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Jobs
model Job {
  id          Int      @id @default(autoincrement())
  name        String
  link        String
  description String
  imageId     Int
  Image       Image    @relation(fields: [imageId], references: [id])
  created     DateTime @default(now())
}

// Images
model Image {
  id      Int      @id @default(autoincrement())
  full    String
  desktop String
  tablet  String
  mobile  String
  small   String
  coeff   Float
  width   Int
  created DateTime @default(now())
  Job     Job[]
}
